# === CLAUDYNE ENVIRONMENT CONFIGURATION ===
# Copy this file to .env.production and fill with actual values
# NEVER commit .env.production to git

# === DATABASE ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=claudyne_production
DB_USER=claudyne_user
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION

# === APPLICATION ===
NODE_ENV=production
APP_NAME=Claudyne
APP_VERSION=1.0.0
PORT=3001
DOMAIN=claudyne.com
FRONTEND_URL=https://claudyne.com
BACKEND_URL=https://claudyne.com/api

# === SECURITY - ROTATE THESE IN PRODUCTION ===
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_32_CHAR_HEX
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_STRONG_32_CHAR_HEX
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRE=30d
ENCRYPTION_KEY=CHANGE_ME_GENERATE_STRONG_32_CHAR_HEX

# === REDIS ===
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION

# === EMAIL (SMTP) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@claudyne.com
SMTP_PASSWORD=CHANGE_ME_IN_PRODUCTION
SMTP_SECURE=true
EMAIL_FROM_NAME=Claudyne Support

# === PAYMENT PROVIDERS ===
MAVIANCE_API_KEY=CHANGE_ME_IN_PRODUCTION
MAVIANCE_API_URL=https://api.smobilpay.com
MAVIANCE_MERCHANT_ID=CHANGE_ME_IN_PRODUCTION
MAVIANCE_SECRET_KEY=CHANGE_ME_IN_PRODUCTION
MTN_MOMO_API_KEY=CHANGE_ME_IN_PRODUCTION
ORANGE_MONEY_API_KEY=CHANGE_ME_IN_PRODUCTION
PAYMENT_WEBHOOK_SECRET=CHANGE_ME_IN_PRODUCTION

# === LOGGING & MONITORING ===
LOG_LEVEL=info
LOG_DIR=./logs
TIMEZONE=Africa/Douala
TZ=Africa/Douala

# === OPTIONAL - CLOUDINARY ===
CLOUDINARY_CLOUD_NAME=claudyne
CLOUDINARY_API_KEY=CHANGE_ME_IN_PRODUCTION
CLOUDINARY_API_SECRET=CHANGE_ME_IN_PRODUCTION

# === OPTIONAL - AWS S3 ===
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=CHANGE_ME_IN_PRODUCTION
AWS_SECRET_ACCESS_KEY=CHANGE_ME_IN_PRODUCTION
AWS_S3_BUCKET=claudyne-backups

# === OPTIONAL - OPENAI ===
OPENAI_API_KEY=CHANGE_ME_IN_PRODUCTION

# === OPTIONAL - SENTRY ===
SENTRY_DSN=https://CHANGE_ME@sentry.io/PROJECT_ID

# === RATE LIMITING ===
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# === PERFORMANCE ===
NODE_OPTIONS=--max_old_space_size=1024
WEB_CONCURRENCY=2
COMPRESSION_LEVEL=6
