# Variables d'environnement pour le développement local Claudyne
# Copier ce fichier vers .env.local et adapter les valeurs

# Suffixe aléatoire pour sécuriser les mots de passe en développement
RANDOM_SUFFIX=dev_$(date +%s)

# Mode de développement
NODE_ENV=development
DEBUG=true

# Ports des services
PORT=3000
API_PORT=3001

# URLs locales
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Sécurité
SECURITY_WEBHOOK_URL=
ADMIN_EMAIL=admin@claudyne.local

# Monitoring
LOG_LEVEL=debug
ENABLE_SECURITY_ALERTS=true

# Base de données de développement (utilise les mots de passe du docker-compose)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=claudyne_dev
DB_USER=claudyne_user

# Redis local
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Configuration de test
MOCK_PAYMENTS=true
MOCK_EMAILS=true
ENABLE_TEST_ROUTES=true

# Répertoires locaux
UPLOAD_DIR=./uploads
LOG_DIR=./logs