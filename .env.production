# ================================
# CLAUDYNE PRODUCTION ENVIRONMENT
# ================================
# ⚠️  Personnalisez ces valeurs avant le déploiement !

# ================================
# Informations générales
# ================================
ENVIRONMENT=production
DOMAIN=claudyne.com
APP_NAME=Claudyne
APP_VERSION=1.0.0

# ================================
# Sécurité - CHANGEZ CES VALEURS !
# ================================

# JWT Secret (générez une clé forte)
JWT_SECRET=CHANGEZ_CETTE_CLE_JWT_TRES_SECRETE_PRODUCTION_2024

# Mots de passe base de données
POSTGRES_PASSWORD=CHANGEZ_MOT_DE_PASSE_POSTGRES_PRODUCTION
REDIS_PASSWORD=CHANGEZ_MOT_DE_PASSE_REDIS_PRODUCTION

# Clé de chiffrement générale
ENCRYPTION_KEY=CHANGEZ_CETTE_CLE_CHIFFREMENT_PRODUCTION

# ================================
# MAVIANCE Production (MTN/Orange)
# ================================
# ⚠️  Remplacez par vos vraies clés MAVIANCE

MAVIANCE_API_URL=https://api.smobilpay.com
MAVIANCE_API_KEY=VOTRE_CLE_API_MAVIANCE_PRODUCTION
MAVIANCE_SECRET_KEY=VOTRE_CLE_SECRETE_MAVIANCE_PRODUCTION
MAVIANCE_MERCHANT_ID=VOTRE_ID_MARCHAND_MAVIANCE

# ================================
# Monitoring et logs
# ================================

# Sentry pour monitoring des erreurs
SENTRY_DSN=https://votre-cle-sentry@sentry.io/projet

# Grafana (optionnel)
GRAFANA_PASSWORD=CHANGEZ_MOT_DE_PASSE_GRAFANA

# ================================
# Email et notifications
# ================================

# SMTP pour envoi d'emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@claudyne.com
SMTP_PASSWORD=CHANGEZ_MOT_DE_PASSE_EMAIL

# Notifications Push (optionnel)
VAPID_PUBLIC_KEY=VOTRE_CLE_PUBLIQUE_VAPID
VAPID_PRIVATE_KEY=VOTRE_CLE_PRIVEE_VAPID

# ================================
# Services tiers (optionnel)
# ================================

# OpenAI pour IA Mentor
OPENAI_API_KEY=VOTRE_CLE_OPENAI

# Cloudinary pour images
CLOUDINARY_CLOUD_NAME=claudyne
CLOUDINARY_API_KEY=VOTRE_CLE_CLOUDINARY
CLOUDINARY_API_SECRET=VOTRE_SECRET_CLOUDINARY

# AWS S3 pour backups (optionnel)
AWS_ACCESS_KEY_ID=VOTRE_CLE_AWS
AWS_SECRET_ACCESS_KEY=VOTRE_SECRET_AWS
AWS_S3_BUCKET=claudyne-backups
AWS_REGION=eu-west-1

# ================================
# Optimisations Cameroun
# ================================

# Timezone
TZ=Africa/Douala

# Limites adaptées aux réseaux 2G/3G
MAX_REQUEST_SIZE=1mb
COMPRESSION_LEVEL=6
CACHE_TTL=300

# Rate limiting adapté
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ================================
# Let's Encrypt SSL
# ================================
CERTBOT_EMAIL=admin@claudyne.com

# ================================
# Backup configuration
# ================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ================================
# Base de données
# ================================
POSTGRES_DB=claudyne_prod
POSTGRES_USER=claudyne_user

# ================================
# Performance
# ================================

# Nombre de workers (ajustez selon votre VPS)
WEB_CONCURRENCY=2
NODE_OPTIONS=--max_old_space_size=1024