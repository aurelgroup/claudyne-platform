# Configuration Environnement Claudyne Backend

# Environnement (development, production, test)
NODE_ENV=development
PORT=3001

# Base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=claudyne_dev
DB_USER=claudyne_user
DB_PASSWORD=claudyne_secure_password
DB_SSL=false

# Base de données pour les tests
TEST_DB_NAME=claudyne_test

# Redis (Cache & Sessions)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=claudyne_redis_password
REDIS_DB=0

# Cache en mémoire pour développement (alternative à Redis)
MEMORY_CACHE_ENABLED=true
CACHE_TTL=300

# JWT Authentification
JWT_SECRET=your_very_secure_jwt_secret_key_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRE=30d

# Chiffrement des données sensibles
ENCRYPTION_KEY=your_32_character_encryption_key

# Email Service (Nodemailer)
EMAIL_FROM=noreply@claudyne.com
EMAIL_FROM_NAME=Équipe Claudyne
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# MTN Mobile Money API
MTN_API_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_SUBSCRIPTION_KEY=your_mtn_subscription_key
MTN_API_USER_ID=your_mtn_api_user_id
MTN_API_KEY=your_mtn_api_key
MTN_CALLBACK_URL=https://api.claudyne.com/payments/mtn/callback

# Orange Money API
ORANGE_API_BASE_URL=https://api.orange.com
ORANGE_CLIENT_ID=your_orange_client_id
ORANGE_CLIENT_SECRET=your_orange_client_secret
ORANGE_MERCHANT_KEY=your_orange_merchant_key
ORANGE_CALLBACK_URL=https://api.claudyne.com/payments/orange/callback

# Cartes bancaires (via partenaire local)
BANK_API_URL=https://api.gimacbank.com
BANK_MERCHANT_ID=your_merchant_id
BANK_SECRET_KEY=your_bank_secret_key

# Stockage des fichiers
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,mp4,mp3

# CDN et optimisation images
CLOUDINARY_CLOUD_NAME=claudyne
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Prix Claudine Configuration
PRIX_CLAUDINE_SEASON=2025-september
PRIX_CLAUDINE_ADMIN_EMAIL=admin@claudyne.com
LEADERBOARD_CACHE_TTL=300

# Limitations et rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
BATTLE_ROYALE_MAX_PLAYERS=100
FREE_TRIAL_DAYS=7

# Monitoring et logs
LOG_LEVEL=info
WINSTON_LOG_FILE=./logs/claudyne.log
SENTRY_DSN=your_sentry_dsn

# Localisation
DEFAULT_LOCALE=fr
TIMEZONE=Africa/Douala
CURRENCY=FCFA

# URLs Frontend
FRONTEND_URL=http://localhost:3000
ADMIN_DASHBOARD_URL=http://localhost:3000/admin
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# WebSocket Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_ADMIN_UI=false

# Tests & Development
MOCK_PAYMENTS=true
SEED_DATABASE=false
DEBUG_MODE=true

# Backup et maintenance
BACKUP_SCHEDULE="0 2 * * *"
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Claudyne est en maintenance, nous revenons très vite !"

# Prix et abonnements (en FCFA)
FAMILY_SUBSCRIPTION_PRICE=12500
INDIVIDUAL_LESSON_PRICE=750
TRIAL_PERIOD_HOURS=168
PREMIUM_FEATURES_PRICE=5000

# Configuration IA Mentor Claudyne
AI_SERVICE_URL=https://api.openai.com/v1
AI_API_KEY=your_openai_api_key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# Notifications Push
PUSH_VAPID_PUBLIC_KEY=your_vapid_public_key
PUSH_VAPID_PRIVATE_KEY=your_vapid_private_key
PUSH_VAPID_SUBJECT=mailto:admin@claudyne.com

# MAVIANCE Smobil Pay (Mobile Money)
MAVIANCE_API_URL=https://api.smobilpay.com
MAVIANCE_API_KEY=test_key_development
MAVIANCE_SECRET_KEY=test_secret_development
MAVIANCE_MERCHANT_ID=test_merchant_claudyne