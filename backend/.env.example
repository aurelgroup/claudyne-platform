# === CLAUDYNE BACKEND ENVIRONMENT ===
# Copy to backend/.env.production and fill with values
# NEVER commit backend/.env.production to git

# === DATABASE ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=claudyne_production
DB_USER=claudyne_user
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# === APPLICATION ===
NODE_ENV=production
PORT=3001
MOBILE_PORT=3002
FRONTEND_URL=https://claudyne.com
BACKEND_URL=https://claudyne.com/api
MOBILE_API_URL=https://claudyne.com/mobile-api

# === SECURITY ===
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_32_CHAR_HEX
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# === SMTP ===
SMTP_HOST=CHANGE_ME_IN_PRODUCTION
SMTP_PORT=587
SMTP_USER=CHANGE_ME_IN_PRODUCTION
SMTP_PASSWORD=CHANGE_ME_IN_PRODUCTION
SMTP_SECURE=true

# === CORS ===
CORS_ORIGIN=https://claudyne.com,https://www.claudyne.com
CORS_CREDENTIALS=true

# === LOGGING ===
LOG_LEVEL=info
LOG_FILE=true
LOG_ROTATION=daily
LOG_MAX_FILES=30

# === CURRENCY & LOCALE ===
CURRENCY=XAF
LOCALE=fr_CM
TIMEZONE=Africa/Douala

# === PAYMENT PROVIDERS ===
MTN_MOMO_API_KEY=CHANGE_ME_IN_PRODUCTION
ORANGE_MONEY_API_KEY=CHANGE_ME_IN_PRODUCTION
PAYMENT_WEBHOOK_SECRET=CHANGE_ME_IN_PRODUCTION

# === MOBILE CONFIG ===
MOBILE_CACHE_TTL=7200
MOBILE_COMPRESSION=true
MOBILE_RESPONSE_LIMIT=50000

# === SYNC & HEALTH ===
AUTO_SYNC_ENABLED=true
AUTO_SYNC_INTERVAL=5
HEALTH_CHECK_INTERVAL=60000
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION=30

# === RATE LIMITING ===
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
