{
  "name": "claudyne-monorepo",
  "version": "1.2.0",
  "description": "Claudyne - Plateforme √©ducative camerounaise unifi√©e Web & Mobile. La force du savoir en h√©ritage.",
  "main": "server.js",
  "workspaces": [
    ".",
    "claudyne-mobile"
  ],
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:mobile\"",
    "dev:web": "node server.js",
    "dev:mobile": "cd claudyne-mobile && npm start",
    "dev:api": "node shared/api/unified-api.js",

    "admin": "node serve-admin.js",
    "backend": "cd backend && node minimal-server.js",
    "backend:dev": "cd backend && npm run dev",

    "build": "npm run build:web && npm run build:mobile",
    "build:web": "echo 'Building web platform...' && npm run optimize",
    "build:mobile": "cd claudyne-mobile && eas build --platform android --profile preview",
    "optimize": "node scripts/optimize-assets.js",

    "deploy": "./deploy-unified.sh --all",
    "deploy:web": "./deploy-unified.sh --web",
    "deploy:mobile": "./deploy-unified.sh --mobile",
    "deploy:dry-run": "./deploy-unified.sh --all --dry-run",

    "test": "npm run test:web && npm run test:mobile",
    "test:web": "echo 'Running web tests...' && exit 0",
    "test:mobile": "cd claudyne-mobile && npm test",

    "lint": "npm run lint:web && npm run lint:mobile",
    "lint:web": "echo 'Linting web code...'",
    "lint:mobile": "cd claudyne-mobile && npm run lint",

    "install:all": "npm install && cd backend && npm install && cd ../claudyne-mobile && npm install",
    "clean": "rm -rf node_modules package-lock.json && cd claudyne-mobile && rm -rf node_modules package-lock.json",

    "android": "cd claudyne-mobile && expo run:android",
    "ios": "cd claudyne-mobile && expo run:ios",

    "logs": "tail -f deployment.log unified-deployment.log",
    "health": "curl http://localhost:3001/api && curl https://claudyne.com/download/claudyne.apk -I",

    "test:integration": "node test-integration.js",
    "test:api": "node shared/api/unified-api.js & sleep 3 && npm run test:integration",
    "dev:full": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"sleep 5 && npm run test:integration\""
  },
  "keywords": [
    "education",
    "cameroon",
    "learning",
    "family",
    "claudine",
    "pwa",
    "mobile-first",
    "2g-3g-optimized"
  ],
  "author": "√âquipe Claudyne <contact@claudyne.com>",
  "license": "MIT",
  "homepage": "https://www.claudyne.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/claudyne.com/claudyne-platform.git"
  },
  "bugs": {
    "url": "https://github.com/claudyne.com/claudyne-platform/issues",
    "email": "support@claudyne.com"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.8.1",
    "jsonwebtoken": "^9.0.1",
    "bcrypt": "^5.1.0",
    "ws": "^8.13.0",
    "socket.io": "^4.7.2",
    "expo-server-sdk": "^3.6.0",
    "nodemailer": "^6.9.3",
    "dotenv": "^16.3.1",
    "react": "18.3.1",
    "react-native": "0.76.9"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "@types/node": "^20.4.2",
    "prettier": "^3.0.0",
    "eslint": "^8.44.0",
    "node-fetch": "^2.7.0"
  },
  "config": {
    "port": 3007,
    "api_port": 3001
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "claudyne": {
    "tribute": "En hommage √† Meffo Mehtah Tchandjio Claudine üë®‚Äçüë©‚Äçüëß‚Äçüë¶",
    "mission": "La force du savoir en h√©ritage",
    "target": "Familles camerounaises",
    "optimized_for": [
      "2G",
      "3G",
      "Mobile",
      "Low-bandwidth"
    ],
    "features": {
      "pwa": true,
      "offline": true,
      "mobile_payments": [
        "MTN",
        "Orange"
      ],
      "glassmorphism": true,
      "service_worker": true,
      "smart_caching": true
    }
  }
}
